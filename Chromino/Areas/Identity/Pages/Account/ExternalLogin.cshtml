@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Continuer";
}

<h1>@ViewData["Title"]</h1>
<h4>Association avec votre compte @Model.LoginProvider</h4>
<hr />

<p class="text-info">
    Vous avez bien été identifié par <strong>@Model.LoginProvider</strong>.
    Merci de choisir un nom de joueur afin de terminer la création de votre compte.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.PlayerName"></label>
                <input asp-for="Input.PlayerName" class="form-control" />
                <span asp-validation-for="Input.PlayerName" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Continuer</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
